<div class="container" id="vendorLogin">
    <div class="row">
        <div class="col login-top">
            <h1>Snacks in a Van</h1>
        </div>
    </div>
    <div class="row justify-content-end">
        <div class="col-5">
            <h5>Vendor!</h5>
        </div>
    </div>


    <section id="loginform">
        <form action="" id="login" method="POST">
            <div class="col-md-10">
                <div class="form-group">
                    <label for="vanName"> Van Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="vanName" id="vanName"
                        placeholder="Enter Your Van Name">
                </div>
                <div class="form-group">
                    <label for="password">Password <span class="text-danger">*</span></label>
                    <input type="password" class="form-control" name="password" id="password"
                        placeholder="Enter Your Password">
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-info btn-block">
                </div>
                <div class="form-group">
                    {{#if error_msg}}
                    <div class="alert alert-danger">{{error_msg}}</div>
                    {{/if}}
                </div>
            </div>
        </form>
    </section>

    <div class="row justify-content-center">
        <p class="mt-5 mb-3 text-muted">Â© 2021</p>
    </div>
</div>